{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			],
			"~/*": [
				"./*"
			]
		},
		"types": [
			"element-plus/global",
			"@types/chrome",
			"@types/node"
		]
	},
	"ts-node": {
		"esm": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}