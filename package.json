{
  "name": "chrome-extension-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "hmr": "gulp -f gulpfile.mjs hmr",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "clean": "rimraf dist && mkdir dist",
    "start": "npm run clean && cross-env NODE_ENV=development npm-run-all -p hmr run",
    "build": "npm run clean && cross-env NODE_ENV=production npm-run-all -p run",
    "run": "npm-run-all -p run:popup run:options run:devtools run:helper run:panel run:background run:content.main",
    "run:popup": "vite build --mode popup",
    "run:options": "vite build --mode options",
    "run:devtools": "vite build --mode devtools",
    "run:helper": "vite build --mode helper",
    "run:panel": "vite build --mode panel",
    "run:background": "vite build --mode background",
    "run:content.main": "vite build --mode content.main",
    "prepare": "husky install .husky"
  },
  "dependencies": {
    "element-plus": "^2.6.3",
    "stylus": "^0.63.0",
    "unplugin-vue-components": "^0.26.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@types/chrome": "^0.0.231",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "cross-env": "^7.0.3",
    "cz-git": "^1.6.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.11.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.5",
    "vite": "^5.2.7",
    "vue-tsc": "^1.2.0",
    "ws": "^8.13.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./commitlint.config.cjs"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --cache --ignore-unknown",
      "eslint --cache --fix"
    ]
  }
}
