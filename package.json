{
  "name": "chrome-extension-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "clean": "rimraf dist",
    "start": "npm run clean && npm-run-all -p watch:b watch:cs watch:sw",
    "build": "npm run clean && npm-run-all -p build:b build:cs build:sw",
    "build:b": "vue-tsc && vite build",
    "build:cs": "vue-tsc && vite build -c vite.other.config.ts --mode content_script",
    "build:sw": "vue-tsc && vite build -c vite.other.config.ts --mode background",
    "watch:b": "vue-tsc && vite build -w",
    "watch:cs": "vue-tsc && vite build -c vite.other.config.ts --mode content_script -w",
    "watch:sw": "vue-tsc && vite build -c vite.other.config.ts --mode background -w",
    "prepare": "husky install .husky"
  },
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@types/chrome": "^0.0.231",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "cz-git": "^1.6.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "vue-tsc": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./commitlint.config.cjs"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --cache --ignore-unknown",
      "eslint --cache --fix"
    ]
  }
}